{
    "name": "typescript-template",
    "version": "0.0.1",
    "description": "This is a template for creating Typescript projects",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build/**/*"
    ],
    "scripts": {
        "start": "npm run dev",
        "build": "tsc",
        "dev": "nodemon src/index.ts",
        "preprod": "npm run build",
        "prod": "node ./build/index.js",
        "prepublish": "npm run lint:fix && tsc",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "tslib": "^2.2.0"
    },
    "devDependencies": {
        "@types/node": "^15.6.1",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "eslint": "^7.27.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/totigm/typescript-template.git"
    },
    "keywords": [
        "typescript",
        "template"
    ],
    "author": "Toti Mu√±oz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/totigm/typescript-template/issues"
    },
    "homepage": "https://github.com/totigm/typescript-template#readme"
}
